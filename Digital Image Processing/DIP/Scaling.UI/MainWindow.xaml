<Window x:Class="Scaling.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scaling.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="980">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="394" Margin="10,10,0,0" VerticalAlignment="Top" Width="620"/>
        <Button x:Name="button" Content="Choose image" HorizontalAlignment="Left" Margin="10,418,0,0" VerticalAlignment="Top" Width="620" Height="41" Click="button_Click"/>
        <TextBox x:Name="coefTextBox" HorizontalAlignment="Left" Height="23" Margin="757,62,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="scaleButton" Content="Scale" HorizontalAlignment="Left" Margin="782,112,0,0" VerticalAlignment="Top" Width="75" Click="scaleButton_Click"/>

    </Grid>
</Window>
